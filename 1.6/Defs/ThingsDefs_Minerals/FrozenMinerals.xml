      <maxStable>0</maxStable>
      <maxGrow>-10</maxGrow>
      <maxIdeal>-20</maxIdeal>
      <minIdeal>-60</minIdeal>
      <minGrow>-120</minGrow>
      <minStable>-150</minStable>
      <belowMinDecayRate>0</belowMinDecayRate>
      <wholeMapEffect>true</wholeMapEffect>
